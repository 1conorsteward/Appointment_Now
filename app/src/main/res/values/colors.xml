    <!-- =================== PRIMARY BRAND COLORS =================== -->
    <color name="primary_purple">#a834eb</color>    <!-- Main branding color -->
    <color name="light_purple">#d6a8ff</color>     <!-- Secondary highlights -->
    <color name="dark_purple">#7a1cb8</color>      <!-- Darker contrast for branding -->

    <!-- =================== ACCENT & HIGHLIGHT COLORS =================== -->
    <color name="accent_blue">#4da6ff</color>      <!-- Action buttons, highlights -->
    <color name="complementary_yellow">#ffdf33</color>  <!-- Attention grabber (e.g., warnings) -->

    <!-- =================== TEXT & BACKGROUND COLORS =================== -->
    <color name="soft_gray">#e0e0e0</color>        <!-- Light gray (backgrounds, dividers) -->
    <color name="dark_gray">#333333</color>        <!-- Text, UI elements -->
    <color name="black">#000000</color>            <!-- High-contrast text or icons -->
    <color name="white">#FFFFFF</color>            <!-- Default light text/icons -->

    <!-- =================== STATUS COLORS (For Events & Appointments) =================== -->
    <color name="status_scheduled">#4da6ff</color>   <!-- Scheduled appointments -->
    <color name="status_completed">#3cb371</color>   <!-- Completed appointments (green) -->
    <color name="status_missed">#ff6347</color>      <!-- Missed appointments (red) -->
    <color name="status_rescheduled">#ffa500</color> <!-- Rescheduled appointments (orange) -->

</resources>